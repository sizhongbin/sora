<<set $genericCounter1 += 1>>
<<if $genericCounter1 lt 2>>
  <<run setup.setMainMenu([{title:'躺平',goto:'4-2'}])>>
<<else>>
  <<run setup.setContinue("4-3")>>
<</if>>

